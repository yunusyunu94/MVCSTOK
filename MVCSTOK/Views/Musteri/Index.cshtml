
@using MVCSTOK.Models.Entity;
@model List<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı:</b> <br /> @Html.TextBox("p")
        <input type="submit"  value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ AD</th>
        <th>MÜŞTERİ SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <th>@mus.MusteriID</th>
                <td>@mus.MusteriAd</td>
                <td>@mus.MusteriSoyad</td>
                <td><a href="/Musteri/Sil/@mus.MusteriID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@mus.MusteriID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "Sil", new { id = mus.MusteriID }, new { @class = "btn btn-warning", onclick = "return confirm('Gercekten Silmek istiyormusunuz?')" })</td>
            </tr>
        }
</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Musteri Ekle</a>